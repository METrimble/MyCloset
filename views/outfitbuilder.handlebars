<header id="buildoutfit-logo-container">
        <a href="/">
            <img id="buildoutfit-logo-img" src="images/mainlogo2.png"/>
        </a>
</header>

<div id="buildoutfit-container">
    <!-- default tab: https://stackoverflow.com/questions/47771613/how-to-set-a-default-active-open-tab-in-html-->
    <div id="doll-container">
        <img id="doll-img" class="dressup-img" src="images/doll.png"/>
        <img id="baseclothing-img" class="dressup-img" src="images/baseclothingpants.png"/>
        <img id="baseclothing-img" class="dressup-img" src="images/baseclothingtop.png"/>
        
        <div class="clothing-tab">
            <button class="tab-link active" onclick="openTabContent(event, 'tops')" id="default-tab">
                <img class="tab-img" src="images/topicon2.png"/>
            </button>
            <button class="tab-link" onclick="openTabContent(event, 'bottoms')">
                <img class="tab-img" src="images/bottomicon2.png"/>
            </button>
            <button class="tab-link" onclick="openTabContent(event, 'dresses')">
                <img class="tab-img" src="images/dressicon2.png"/>
            </button>
            <button class="tab-link" onclick="openTabContent(event, 'socks')">
                <img class="tab-img" src="images/socksicon2.png"/>
            </button>
            <button class="tab-link" onclick="openTabContent(event, 'shoes')">
                <img class="tab-img" src="images/shoesicon2.png"/>
            </button>
            <button class="tab-link" onclick="openTabContent(event, 'accessories')">
                <img class="tab-img" src="images/accessoriesicon2.png"/>
            </button>
            <button class="tab-link" onclick="openTabContent(event, 'bags')">
                <img class="tab-img" src="images/bagicon2.png"/>
            </button>
            <button class="tab-link" onclick="openTabContent(event, 'outerwear')">
                <img class="tab-img" src="images/outerwearicon2.png"/>
            </button>
        </div>

        <div id="finish-button-container">
            <button id="finish-button">
                <img id="finish-button-img" src="images/finish.png"/>
            </button>
        </div>
    </div>

    <div id="clothing-container">
        <!--Tab content-->
        <!--Tops-->
        <div id="tops" class="tabcontent">
            <div class="items">
                <div class="item-container">
                    <img class="item-image" src="images/whitefrillytee-cropped.png"/>
                    <input type="radio" name="top" value="whitefrillytee">
                </div>

                <!-- {{#each top}}
                <div class="item-container">
                    <img class="item-image" src="{{zpath}}"/>
                    <input type="radio" name="top" value="{{ID}}"> 
                </div>
                {{/each}} -->
                
            </div>
            <div id="filter-tops" class="filter-container">
                <form>
                    <div class="filter-option">
                        <p>Filter By Type</p>
                        <select class="filter-dropdown">
                            <option value="Sweater">Sweater</option>
                            <option value="Sweatshirt">Sweatshirt</option>
                            <option value="Blouse">Blouse</option>
                            <option value="T-Shirt">T-Shirt</option>
                            <option value="Tank-Top">Tank-Top</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    
                    <div class="filter-option">
                        <p>Filter By Color</p>
                        <select class="filter-dropdown">
                            <option value="White">White</option>
                            <option value="Black">Black</option>
                            <option value="Brown">Brown</option>
                            <option value="Beige">Beige</option>
                            <option value="Gray">Gray</option>
                            <option value="Red">Red</option>
                            <option value="Pink">Pink</option>
                            <option value="Orange">Orange</option>
                            <option value="Yellow">Yellow</option>
                            <option value="Light-Green">Light-Green</option>
                            <option value="Green">Green</option>
                            <option value="Light-Blue">Light-Blue</option>
                            <option value="Blue">Blue</option>
                            <option value="Purple">Purple</option>
                            <option value="Mixed">Mixed</option>
                        </select>
                    </div>
                    <br>
                    <input type="submit" class="filter-button" value="Fliter">
                </form>
            </div>
        </div>

        <div id="bottoms" class="tabcontent">
            <p>bottoms</p>

            <div id="filter-bottoms">
                
            </div>
        </div>

        <div id="dresses" class="tabcontent">
            <p>dresses</p>

            <div id="filter-dresses">
                
            </div>
        </div>

        <div id="socks" class="tabcontent">
            <p>Socks</p>

            <div id="filter-socks">
                
            </div>
        </div>

        <div id="shoes" class="tabcontent">
            <p>Shoes</p>

            <div id="filter-shoes">
                
            </div>
        </div>

        <div id="accessories" class="tabcontent">
            <p>accessories</p>

            <div id="filter-accessories">
                
            </div>
        </div>

        <div id="bags" class="tabcontent">
            <p>bags</p>

            <div id="filter-bags">
                
            </div>
        </div>

        <div id="outerwear" class="tabcontent">
            <p>outerwear</p>

            <div id="filter-outerwear">
                
            </div>
        </div>

        <!--add button-->
        <div class="button-link-container">
            
        </div>

        <!--edit button-->
        <div class="button-link-container">
            
        </div>
    </div>

